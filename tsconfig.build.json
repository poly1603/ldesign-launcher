{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts", 
    "src/**/*.bench.ts",
    "src/__tests__/**/*"
  ]
}